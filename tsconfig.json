{
    "compilerOptions": {
        "baseUrl": ".",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react-jsx",
        "jsxImportSource": "@emotion/react",
        "lib": ["dom", "esnext"],
        "module": "es2022",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "es2022",
        "types": ["node", "jest", "@testing-library/jest-dom"]
    },
    "include": ["frontend/**/*"]
}
