{
    "private": true,
    "scripts": {
        "lint:frontend:eslint": "eslint .",
        "lint:frontend:ts": "tsc --noEmit",
        "lint:prettier": "prettier --check .",
        "prebuild": "rm -rf frontend_dist",
        "preinstall": "npx only-allow pnpm",
        "start": "parcel & nodemon mockBackend.js",
        "build": "parcel build --no-source-maps",
        "postbuild": "find frontend_dist/ -type f ! -name '*.gz' -delete && find frontend_dist/ -type f -name '*.map.gz' -delete && ls -lah frontend_dist/",
        "test": "jest"
    },
    "dependencies": {
        "@emotion/react": "^11.14.0",
        "@emotion/styled": "^11.14.1",
        "@fontsource/roboto": "^5.2.6",
        "@mui/icons-material": "^5.18.0",
        "@mui/material": "^5.18.0",
        "autosuggest-highlight": "^3.3.4",
        "axios": "^1.11.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-router": "^7.8.2",
        "react-router-dom": "^6.30.1",
        "remeda": "^1.61.0",
        "swr": "^2.3.6"
    },
    "devDependencies": {
        "@babel/preset-react": "^7.27.1",
        "@parcel/compressor-gzip": "^2.15.4",
        "@parcel/config-default": "^2.15.4",
        "@parcel/transformer-less": "^2.15.4",
        "@testing-library/jest-dom": "^6.8.0",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/autosuggest-highlight": "^3.2.3",
        "@types/express": "^4.17.23",
        "@types/jest": "^29.5.14",
        "@types/react": "^18.3.24",
        "@types/react-dom": "^18.3.7",
        "@types/react-router-dom": "^5.3.3",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "buffer": "^6.0.3",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^9.1.2",
        "eslint-import-resolver-typescript": "^3.10.1",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^4.6.2",
        "eslint-plugin-unused-imports": "^3.2.0",
        "express": "^4.21.2",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^30.1.2",
        "nodemon": "^3.1.10",
        "parcel": "^2.15.4",
        "prettier": "3.1.1",
        "process": "^0.11.10",
        "ts-jest": "^29.4.1",
        "typescript": "^5.9.2"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "jsdom",
        "setupFilesAfterEnv": [
            "<rootDir>/frontend/jest.setup.js"
        ]
    },
    "targets": {
        "default": {
            "source": "frontend/index.html",
            "distDir": "frontend_dist"
        }
    }
}
