{
    "private": true,
    "scripts": {
        "simulator:fullclean": "pio run -t fullclean",
        "simulator:clean": "pio run -t clean",
        "simulator:run": "pio run -t upload",
        "esp:erase-config": "parttool.py erase_partition --partition-name=app_nvs",
        "lint:frontend": "concurrently 'pnpm lint:frontend:eslint' 'pnpm lint:frontend:ts' 'pnpm lint:prettier'",
        "lint:frontend:eslint": "eslint .",
        "lint:frontend:ts": "tsc --noEmit",
        "lint:prettier": "prettier --check .",
        "prebuild": "rm -rf frontend_dist",
        "preinstall": "npx only-allow pnpm",
        "prestart": "msw init > /dev/null 2>&1",
        "start": "parcel",
        "build": "parcel build --no-source-maps",
        "postbuild": "find frontend_dist/ -type f ! -name '*.gz' -delete && find frontend_dist/ -type f -name '*.map.gz' -delete && ls -lah frontend_dist/",
        "test": "jest"
    },
    "dependencies": {
        "@emotion/react": "^11.14.0",
        "@emotion/styled": "^11.14.1",
        "@fontsource/roboto": "^5.2.6",
        "@mui/icons-material": "^7.3.2",
        "@mui/material": "^7.3.2",
        "autosuggest-highlight": "^3.3.4",
        "axios": "^1.12.1",
        "react": "^19.1.1",
        "react-dom": "^19.1.1",
        "react-router": "^7.9.0",
        "remeda": "^2.31.1",
        "swr": "^2.3.6"
    },
    "devDependencies": {
        "@babel/preset-react": "^7.27.1",
        "@parcel/compressor-gzip": "^2.15.4",
        "@parcel/config-default": "^2.15.4",
        "@parcel/transformer-less": "^2.15.4",
        "@testing-library/jest-dom": "^6.8.0",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/autosuggest-highlight": "^3.2.3",
        "@types/express": "^5.0.3",
        "@types/jest": "^30.0.0",
        "@types/node": "^24.7.0",
        "@types/react": "^19.1.13",
        "@types/react-dom": "^19.1.9",
        "@typescript-eslint/eslint-plugin": "^8.42.0",
        "@typescript-eslint/parser": "^8.43.0",
        "buffer": "^6.0.3",
        "concurrently": "^9.2.1",
        "eslint": "^9.35.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-unused-imports": "^4.2.0",
        "express": "^5.1.0",
        "jest": "^30.1.3",
        "jest-environment-jsdom": "^30.1.2",
        "msw": "^2.11.2",
        "parcel": "^2.15.4",
        "prettier": "3.6.2",
        "process": "^0.11.10",
        "ts-jest": "^29.4.1",
        "typescript": "^5.9.2"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "jsdom",
        "setupFilesAfterEnv": [
            "<rootDir>/frontend/jest.setup.js"
        ]
    },
    "targets": {
        "default": {
            "source": "frontend/index.html",
            "distDir": "frontend_dist"
        }
    },
    "msw": {
        "workerDirectory": [
            "dist"
        ]
    },
    "@parcel/resolver-default": {
        "packageExports": true
    }
}
